<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Common_Layout_Style"
    android:background="@color/backgroud_color"
    tools:context="com.vinchan.shareumbrella.activity.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_yqdy_banner" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_yqdy_ewm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="好友扫一扫，即可邀请\n或通过一以下方式邀请"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/wchat_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_yqdy_wxfx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信分享"
                        android:textSize="@dimen/secondary_title_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/link_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_yqdy_fzlj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复制链接"
                        android:textSize="@dimen/secondary_title_text_size" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:text="您的专属工号发送给被邀请人"
                android:layout_marginTop="10dp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/invation_code_tv"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_yqyjleft"
                    android:text="我的邀请码工号：4354khe5"
                    android:textSize="@dimen/secondary_title_text_size"
                    android:textColor="@color/black_color"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/copy_invation_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_yqyright"
                    android:text="复制邀请码"
                    android:textSize="@dimen/secondary_title_text_size"
                    android:textColor="@color/white_color"
                    android:gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:background="@color/main_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="活动规则"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/secondary_title_text_size" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:background="@color/main_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_dy_gzsm"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="被邀请人注册成功后"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_dy_gzsm"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="被邀请人出单5组（50把伞）"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_dy_gzsm"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="邀请人和被邀请人均可获得20元奖励"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@style/LoadingProgressBarStyle" />

    <include
        android:id="@+id/title"
        layout="@layout/common_title"></include>
</RelativeLayout>
