<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Common_Layout_Style"
    android:background="@color/backgroud_color"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        android:layout_below="@+id/title"
        android:gravity="center"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:src="@drawable/ic_kscslogo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_button_text_size"
            android:text="请点击对应的伞槽号按钮即可开锁"
            android:textColor="@color/main_color"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/button_1"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="1"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                />
            <TextView
                android:id="@+id/button_2"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="2"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/button_3"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="3"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                />
            <TextView
                android:id="@+id/button_4"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="4"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/button_5"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="5"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                />
            <TextView
                android:id="@+id/button_6"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="6"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/button_7"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="7"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                />
            <TextView
                android:id="@+id/button_8"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="8"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/button_9"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="9"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                />
            <TextView
                android:id="@+id/button_10"
                android:layout_width="117dp"
                android:layout_height="60dp"
                android:text="10"
                android:textSize="@dimen/secondary_title_text_size"
                android:textColor="@color/black_color"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="@drawable/ic_kscsatn01"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>
    </LinearLayout>


    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@style/LoadingProgressBarStyle" />

    <include
        android:id="@+id/title"
        layout="@layout/common_title"></include>
</RelativeLayout>
