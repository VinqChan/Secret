<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/backgroud_color"></View>

    <RelativeLayout
        android:id="@+id/question_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Q:"
            android:textColor="@color/main_color"
            android:textSize="@dimen/common_button_text_size" />

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text1"
            android:text="遇到卡伞怎么办"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/common_button_text_size" />

        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_bzzx_nor_xl" />
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/backgroud_color" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="如遇卡伞现象的用户，直接重新取出即可，系统会自动识别"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/common_button_text_size"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        />
</LinearLayout>