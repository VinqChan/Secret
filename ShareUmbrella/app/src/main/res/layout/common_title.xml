<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/main_color"
    android:gravity="center_vertical"
    tools:context="com.vinchan.shareumbrella.activity.LoginActivity">


    <ImageView
        android:id="@+id/title_back_iv"
        android:layout_width="@dimen/common_title_icon_size"
        android:layout_height="@dimen/common_title_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_title_back" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@color/white_color"
        android:textSize="@dimen/common_title_text_size" />

    <ImageView
        android:id="@+id/own_info_iv"
        android:layout_width="@dimen/common_title_icon_size"
        android:layout_height="@dimen/common_title_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/title_back_iv"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/ic_grzx" />

</RelativeLayout>
