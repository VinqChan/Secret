<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Common_Layout_Style"
    android:background="@color/white_color"
    tools:context="com.vinchan.shareumbrella.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="伞&#160;桩&#160;编&#160;码："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/san_code_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="伞&#160;仓&#160;长&#160;伞："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/num_of_cs_et"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="伞&#160;槽&#160;长&#160;伞："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/num_of_sccs_et"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="伞&#160;仓&#160;短&#160;伞："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/num_of_ds_et"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="伞&#160;槽&#160;短&#160;伞："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/num_of_scds_et"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="伞仓登山仗："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/num_of_dss_et"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="伞槽登山仗："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <EditText
                android:id="@+id/num_of_scdss_et"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_stock_report_editview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="日&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;期："
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <RelativeLayout
                android:id="@+id/select_date_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_stock_report_editview"
                android:gravity="center">

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="2018-06-20"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/secondary_title_text_size" />

                <ImageView
                    style="@style/CommonIconStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_rq" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="维护人员工号:"
                android:textColor="@color/black_color"
                android:textSize="@dimen/secondary_title_text_size" />

            <TextView
                android:id="@+id/matain_code_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_stock_report_editview"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="ghdg342d"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/secondary_title_text_size" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@style/LoadingProgressBarStyle" />

    <include
        android:id="@+id/title"
        layout="@layout/common_title"></include>
</RelativeLayout>
