<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Common_Layout_Style"
    android:background="@color/white_color"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/ic_grzx_bg"
                android:gravity="center"
                android:orientation="vertical">

                <com.dangong.oksan.view.roundImage.RoundedImageView
                    android:id="@+id/custom_header_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_default_customer" />

                <TextView
                    android:id="@+id/phone_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1234567890"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_certified_shape"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="已认证"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/wallet_rl"
                style="@style/LinerLaoutClickPersonCenterStyle">

                <ImageView
                    android:id="@+id/imageView4"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_wdqb"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:gravity="center_vertical"
                    android:text="我的钱包"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />


                <ImageView
                    android:id="@+id/arrow_4"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

            <View style="@style/CommonLine" />

            <RelativeLayout
                android:id="@+id/history_rl"
                style="@style/LinerLaoutClickPersonCenterStyle">

                <ImageView
                    android:id="@+id/imageView5"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_lsdgjl"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:gravity="center_vertical"
                    android:text="历史订单记录"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />


                <ImageView
                    android:id="@+id/arrow_5"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

            <View style="@style/CommonLine" />

            <RelativeLayout
                android:id="@+id/gift_shop_rl"
                style="@style/LinerLaoutClickPersonCenterStyle">

                <ImageView
                    android:id="@+id/imageView2"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_lpsc"></ImageView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:gravity="center"
                    android:text="礼品商城"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />


                <ImageView
                    android:id="@+id/arrow_2"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

            <View style="@style/CommonLine" />

            <RelativeLayout
                android:id="@+id/help_rl"
                style="@style/LinerLaoutClickPersonCenterStyle">

                <ImageView
                    android:id="@+id/imageView7"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_bzzx"></ImageView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_toRightOf="@+id/imageView7"
                    android:gravity="center"
                    android:text="帮助中心"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />


                <ImageView
                    android:id="@+id/arrow_7"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

            <View style="@style/CommonLine" />

            <RelativeLayout
                android:id="@+id/guide_rl"
                style="@style/LinerLaoutClickPersonCenterStyle">

                <ImageView
                    android:id="@+id/imageView8"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_dyczsc"></ImageView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView8"
                    android:layout_toRightOf="@+id/imageView8"
                    android:gravity="center"
                    android:text="站点管理员操作手册"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />


                <ImageView
                    android:id="@+id/arrow_8"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

            <View style="@style/CommonLine" />

            <RelativeLayout
                android:id="@+id/setting_rl"
                style="@style/LinerLaoutClickPersonCenterStyle">

                <ImageView
                    android:id="@+id/imageView9"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_sz"></ImageView>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView9"
                    android:layout_toRightOf="@+id/imageView9"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />


                <ImageView
                    android:id="@+id/arrow_9"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

            <View style="@style/CommonLine" />

            <RelativeLayout
                android:id="@+id/wechat_rl"
                style="@style/LinerLaoutClickPersonCenterStyle"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    style="@style/CommonIconStyle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_grzx_zdkf"></ImageView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:gravity="center"
                    android:text="致电客服"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/common_text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height"
                    android:layout_toLeftOf="@+id/arrow_3"
                    android:layout_toStartOf="@+id/arrow_3"
                    android:clickable="false"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/customer_service_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/service_phone_text"
                        android:textSize="@dimen/common_text_size" />

                    <TextView
                        android:id="@+id/work_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="8：00~20：00（工作时间）"
                        android:textSize="@dimen/common_text_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow_3"
                    android:layout_width="@dimen/common_icon_size"
                    android:layout_height="@dimen/common_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow"></ImageView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@style/LoadingProgressBarStyle" />

    <include
        android:id="@+id/title"
        layout="@layout/common_title"></include>
</RelativeLayout>
