<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonButtonBackgroud">
        <item name="android:background">@drawable/bg_login_button</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
    </style>

    <style name="CommonLine">
        <item name="android:background">@color/gray_line_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CommonVerfyCodeButtonBackgroud">
        <item name="android:background">@drawable/bg_verfycode_login_button</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
    </style>

    <style name="CommonIconStyle">
        <item name="android:layout_width">@dimen/common_icon_size</item>
        <item name="android:layout_height">@dimen/common_icon_size</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CommonVerticalLineStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/gray_line_color</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="ViewSoildLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ececec</item>
    </style>

    <style name="dialog_bottom" parent="@style/dialog_common">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_common" parent="@style/Dialog">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
    </style>



    <style name="Dialog_transparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="LinerLaoutClickStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/bg_linerlayout</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinerLaoutClickPersonCenterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/bg_linerlayout</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <declare-styleable name="rounde_image_view">
        <attr name="isDrowOutCicle" format="boolean" />
        <attr name="cicleOutStrokeCorlor" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="rounde_image_view_div">
        <attr name="rounde_size" format="dimension" />
    </declare-styleable>

</resources>
